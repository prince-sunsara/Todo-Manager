<table border="2">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Due Date</th>
        <th>Completed status</th>
    </tr>
    <% for(var i = 0; i < allTodos.length; i++) { %>
    <tr>
        <td>                
            <%= [i+1] %>
        </td>
        <td>                
            <%= allTodos[i].title %>
        </td>
        <td>
            <%= allTodos[i].dueDate %>
        </td>
        <td>
            <%= allTodos[i].completed %>
        </td>
    </tr>
    <% } %>
</table>